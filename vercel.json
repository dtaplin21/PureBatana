{
  "buildCommand": "npm install && npm run build:client",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "functions": {
    "api/**": {
      "runtime": "@vercel/node@4.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}